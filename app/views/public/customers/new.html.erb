<h1>新規登録</h1>
<%= form_with model: @customer, url: public_customers_path do |f| %>
  <h4>姓</h4>
  <%= f.text_field :last_name %>
  
  <h4>名</h4>
  <%= f.text_field :first_name %>
  
  <h4>姓カナ</h4>
  <%= f.text_field :last_name_kana %>
  
  <h4>名カナ</h4>
  <%= f.text_field :first_name_kana %>
  
  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  
  <h4>住所</h4>
  <%= f.text_field :address %>
	
  <h4>電話番号</h4>
  <%= f.text_area :telephone_number %>
  
  <h4>メール</h4>
  <%= f.text_area :email %>
  
  <h4>パスワード</h4>
  <%= f.text_area :encrypted_password %>
  <%= f.submit '登録' %>
<% end %>