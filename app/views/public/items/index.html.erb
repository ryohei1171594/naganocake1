<h1>商品一覧</h1>

<% @items.each do |item| %>

  <p>商品名</p>
  <span><%= link_to item.name, public_item_path(item.id) %></span>
  
  <p>イメージ</p>
  <% if item.image.attached? %>
    <%= link_to image_tag item.image, size: "50x50" %>
  <% else %>
    <%= link_to image_tag("no_image.jpeg"), public_item_path(item.id) %>
  <% end %>
  
<br>
<br>
<br>
  
<% end %>