<h3>注文履歴</h3>
<table>
  <tr>
    <td>購入日時</td>
    <td>購入者</td>
    <td>注文個数</td>
    <td>注文ステータス</td>
  </tr>
    <% @orders.each do |order| %>
      <tr>
          <td>
            <%= link_to  public_order_path(order.id) do %>
              <%= order.created_at %>
            <% end %>
          </td>
          <td><%= order.customer.first_name%><%= order.customer.last_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
</table>
