<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_signed_in? %>
      　<%= link_to "商品一覧", admin_items_path, method: :get %>
      　<%= link_to "注文一覧", admin_homes_top_path, method: :get %>
      　<%= link_to "会員一覧", admin_customers_path, method: :get %>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        <%= link_to "ログイン", new_admin_session_path, method: :get %>
      <% elsif customer_signed_in? %>
        <%= link_to "商品一覧", public_items_path, method: :get %>
        <%= link_to "カート", public_cart_items_path, method: :get %>
        <%= link_to "注文履歴", public_orders_path, method: :get %>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
        <%= link_to 'マイページ', public_customers_mypage_path %>
      <% else %>
        <%= link_to "ログイン", new_customer_session_path,method: :get %>
        <%= link_to "新規登録", new_customer_registration_path, method: :get %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
